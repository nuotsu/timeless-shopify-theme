{%- liquid
  case section.settings.content_alignment
    when 'left'
      assign content_class = 'text-left'
    when 'center'
      assign content_class = 'text-center'
    when 'right'
      assign content_class = 'text-right'
  endcase
-%}

<div class="grid md:grid-cols-2 items-center overflow-hidden" style="border-radius: var(--border-radius);">
  <figure
    class="overflow-hidden {{ section.settings.image_position_desktop }} {{ section.settings.image_position_mobile }}"
    style="border-radius: var(--border-radius);"
  >
    {%- if section.settings.image -%}
      {{ section.settings.image
        | image_url: width: 1000
        | image_tag: loading: section.settings.image_loading
      }}
    {%- else -%}
      {{ 'image' | placeholder_svg_tag }}
    {%- endif -%}
  </figure>

  <div
    class="py-8 px-4 sm:px-8 rte {{ content_class }}"
    style="text-wrap: balance;"
  >
    {{ section.settings.content }}
    {% render 'cta-list' %}
  </div>
</div>

<style type="text/tailwindcss">
  #shopify-section-{{ section.id }} > div {
    --canvas: {{ section.settings.color_scheme.settings.canvas }};
    --ink: {{ section.settings.color_scheme.settings.ink }};
    @apply bg-[var(--canvas)] text-[var(--ink)];
  }
</style>

{% schema %}
{
  "name": "Hero",
  "tag": "section",
  "class": "section max-w-screen-lg px-0",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<h2>Heading</h2><p>A description goes here.</p>"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content alignment",
      "options": [
        {
          "value": "left",
          "label": "left"
        },
        {
          "value": "center",
          "label": "center"
        },
        {
          "value": "right",
          "label": "right"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_position_desktop",
      "label": "Desktop position",
      "options": [
        {
          "value": "",
          "label": "left"
        },
        {
          "value": "md:order-1",
          "label": "right"
        }
      ],
      "default": ""
    },
    {
      "type": "select",
      "id": "image_position_mobile",
      "label": "Mobile position",
      "options": [
        {
          "value": "",
          "label": "before content"
        },
        {
          "value": "<md:order-1",
          "label": "after content"
        }
      ],
      "default": ""
    },
    {
      "type": "select",
      "id": "image_loading",
      "label": "Image loading",
      "options": [
        {
          "value": "lazy",
          "label": "lazy"
        },
        {
          "value": "eager",
          "label": "eager"
        }
      ],
      "default": "lazy"
    }
  ],
  "blocks": [
    {
      "type": "cta",
      "name": "Call-to-action",
      "settings": [
        {
          "type": "url",
          "id": "url",
          "label": "URL"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label"
        },
        {
          "type": "select",
          "id": "style",
          "label": "Style",
          "options": [
            {
              "value": "action",
              "label": "Action (primary)"
            },
            {
              "value": "action-secondary",
              "label": "Action (secondary)"
            },
            {
              "value": "ghost",
              "label": "Ghost button"
            },
            {
              "value": "hashtag",
              "label": "Hashtag"
            }
          ],
          "default": "action"
        }
      ]
    }
  ],
  "disabled_on": {
    "groups": [
      "*"
    ]
  },
  "presets": [
    {
      "name": "Hero",
      "blocks": [
        {
          "type": "cta",
          "settings": {
            "label": "Shop now",
            "style": "action"
          }
        }
      ]
    }
  ]
}
{% endschema %}
